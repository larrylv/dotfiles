{
    "application.shellEnvironmentResolutionTimeout": 30,
    "cmake.options.statusBarVisibility": "compact",
    "cmake.showOptionsMovedNotification": false,
    "cursor.aipreview.enabled": true,
    "cursor.composer.cmdPFilePicker2": true,
    "cursor.general.gitGraphIndexing": "enabled",
    "editor.fontFamily": "Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "git.openRepositoryInParentFolders": "never",
    "git.pruneOnFetch": true,
    "git.pullTags": false,
    "gitHistory.showFileHistorySplit": false,
    "gitlens.graph.allowMultiple": false,
    "gitlens.graph.branchesVisibility": "current",
    "gitlens.graph.minimap.enabled": false,
    "gitlens.graph.scrollMarkers.enabled": false,
    "gitlens.graph.showDetailsView": false,
    "gitlens.graph.showUpstreamStatus": false,
    "gitlens.graph.sidebar.enabled": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.telemetry.enabled": false,
    "gitlens.views.scm.grouped.views": {
        "branches": false,
        "remotes": false,
        "stashes": false,
        "tags": false,
        "worktrees": false,
        "contributors": false
    },
    "notebook.insertFinalNewline": true,
    "problems.showCurrentInStatus": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.exclude": [
        "**/.mypy_cache",
        "**/.git",
        "**/.pytest_cache",
        "**/.ruff_cache",
        "**/.vscode",
        "**/node_modules",
        "**/target",
        "**/vendor",
        "**/vendor_imports",
        "**/x/"
    ],
    "python.analysis.extraPaths": [
        "/Users/larrylv/code/openai"
    ],
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.nodeExecutable": "/opt/homebrew/bin/node",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.userFileIndexingLimit": 5000,
    "python.autoComplete.extraPaths": [
        "/Users/larrylv/code/openai"
    ],
    "python.languageServer": "Pylance",
    // Python: ruff
    // note: monorepo tooling uses isort
    "ruff.lineLength": 100,
    "ruff.nativeServer": true,
    // "ruff.format.args": [
    //     "--line-length=100"
    // ],
    // "ruff.lint.args": [
    //     "--config",
    //     ".ruff_autofix_minimal.toml"
    // ],
    "scm.autoReveal": false,
    "scm.countBadge": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.automationProfile.osx": {
        "path": "/usr/local/bin/bash"
    },
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.shellIntegration.enabled": false,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.shell": "/usr/local/bin/bash",
    "window.autoDetectHighContrast": false,
    "window.systemColorTheme": "dark",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.enablePreview": false,
    "workbench.localHistory.enabled": false,
    "workbench.preferredDarkColorTheme": "Solarized Dark",
    "workbench.preferredHighContrastLightColorTheme": "Solarized Dark",
    "workbench.preferredLightColorTheme": "Solarized Dark",
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSaveMode": "modifications",
        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": "currentDocument"
    }
}
