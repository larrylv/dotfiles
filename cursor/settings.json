{
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnType": true,
        "editor.formatOnSaveMode": "modifications",
        "editor.wordBasedSuggestions": "currentDocument",
        "editor.codeActionsOnSave": {
            // "source.organizeImports": "explicit"
        },
    },
    "ruff.format.args": [
        "--line-length=100"
    ],
    "ruff.lint.args": [
        "--config",
        ".ruff_autofix_minimal.toml"
    ],
    "python.autoComplete.extraPaths": [
        "/Users/larrylv/code/openai"
    ],
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/bin/nvim",
    "python.languageServer": "Pylance",
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.allowChords": false,
    "terminal.integrated.inheritEnv": false,
    "security.workspace.trust.untrustedFiles": "open",
    "vim.shell": "/usr/local/bin/bash",
    "terminal.integrated.automationProfile.osx": {
        "path": "/usr/local/bin/bash"
    },
    "cmake.options.statusBarVisibility": "compact",
    "application.shellEnvironmentResolutionTimeout": 30,
    "editor.fontSize": 14,
    "editor.fontFamily": "Monaco, 'Courier New', monospace",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.preferredHighContrastLightColorTheme": "Solarized Dark",
    "workbench.preferredDarkColorTheme": "Solarized Dark",
    "workbench.preferredLightColorTheme": "Solarized Dark",
    "window.systemColorTheme": "dark",
    "window.autoDetectHighContrast": false,
    "python.analysis.userFileIndexingLimit": 10000,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.autoImportCompletions": true,
    "cmake.showOptionsMovedNotification": false,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.nodeExecutable": "/opt/homebrew/bin/node",
    "python.analysis.exclude": [
        "**/.mypy_cache",
        "**/.git",
        "**/.pytest_cache",
        "**/.ruff_cache",
        "**/.vscode",
        "**/node_modules",
        "**/target",
        "**/vendor",
        "**/vendor_imports",
        "**/x/",
        "**/rcall_config*.py",
        "harmony/harmony/deprecated/**",
        "deprecated",
        "feather",
        "feather-db",
        "personal",
        "api/labsapi",
        "api/billing*",
        "api/x/",
        "api/libs/schemas",
        "api/bedrock*",
        "api/libs/billing*",
        "api/libs/swagger-dashboard",
        "project/robotics-sim/",
        "project/moderation_experiments",
        "project/flywheel",
        "project/airflow",
        "project/harmony_experiments",
        "project/harmony*",
        "project/preparedness",
        "eval-gym",
        "project/oai-spark-jobs",
        "alignment/",
        "tether2/",
        "maraschino"
    ],
    "git.openRepositoryInParentFolders": "never",
    "python.analysis.extraPaths": [
        "/Users/larrylv/code/openai"
    ],
    "editor.formatOnSave": true,
    "cursor.aipreview.enabled": true,
    "cursor.composer.cmdPFilePicker2": true,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "editor.wordWrap": "on",
    "problems.showCurrentInStatus": true,
}
