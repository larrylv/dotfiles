{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "analyses": { "composites": false }
      }
    },
    "sorbet": {
      "command": "srb",
      "args": [
        "tc",
        "--typed",
        "true",
        "--enable-all-experimental-lsp-features",
        "--lsp"
      ],
      "filetypes": ["ruby", "rbi"],
      "additionalSchemes": ["sorbet:build", "sorbet:https"],
      "initializationOptions": {
        "supportsSorbetURIs": true
      },
      "rootPatterns": ["sorbet/config"]
    }
  },
  "coc.preferences.formatOnSave": true,
  "coc.preferences.messageLevel": "error",
  "coc.source.tag.priority": 20,
  "codeLens.enable": true,
  "diagnostic.displayByAle": true,
  "hover.floatConfig": {
    "border": true
  },
  "list.previewSplitRight": true,
  "list.previewToplineStyle": "middle",
  "list.normalMappings": {
    "v": "action:vsplit",
    "<C-v>": "action:vsplit",
    "<C-d>": "action:split",
    "<C-t>": "action:tabe",
    "<C-j>": "normal:j",
    "<C-n>": "normal:j",
    "<C-k>": "normal:k",
    "<C-p>": "normal:k"
  },
  "metals.statusBarEnabled": true,
  "notification.disabledProgressSources": ["*"],
  "rust-analyzer.lens.debug.enable": false,
  "rust-analyzer.lens.run.enable": false,
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.minTriggerInputLength": 0,
  "suggest.snippetIndicator": ""
}

